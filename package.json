		"vite": "^5.2.13",
		"vitest": "^1.6.0"
	},
	"type": "module",
	"main": "index.js",
	"files": [
		"Adapter.*",
		"Tags.*",
		"Minimark.*",
		"MinimarkNode.*",
		"index.*",
		"minimark.css"
	]
